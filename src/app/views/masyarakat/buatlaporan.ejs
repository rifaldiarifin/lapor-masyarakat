<div class="header-page">
    <h1>Buat Laporan</h1>
</div>
<div class="content-page">
    <p class="font-size-14 disabled-text-1 font-weg-600">Mohon isi from ini dengan benar dan tepat!</p>
    <form action="/home/laporanpengaduan/buatlaporan" id="buatlaporan" method="post" enctype="multipart/form-data" style="z-index: 1;">
        <div class="box">
            <p class="font-size-14 font-weg-600">Apa yang ingin anda laporkan?</p>
            <div class="input-field default icon" data-type="text" data-validatormode="offline" tabindex="0" style="width: 100%; max-width: 500px; min-width: 250px;">
                <div class="icons8-regular ball-point-pen"></div>
                <input name="judul" id="" aria-label="Password Field" />
                <span style="background-color: var(--second-color);" data-msginput=" / Cannot be empty!">Judul</span>
                <span class="show-pass"></span>
            </div>
        </div>
        <!-- <div class="box">
            <p class="font-size-14 font-weg-600">Waktu dari laporan</p>
            <div class="input-field default icon" data-type="text" data-validatormode="offline" tabindex="0" style="width: 100%; max-width: 500px; min-width: 250px;">
                <div class="icons8-regular clock"></div>
                <input name="waktu" id="" aria-label="Password Field" />
                <span style="background-color: var(--second-color);" data-msginput=" / Cannot be empty!">Waktu</span>
                <span class="show-pass"></span>
            </div>
        </div> -->
        <div class="box">
            <p class="font-size-14 font-weg-600">Tanggal dari laporan.</p>
            <div class="input-field default icon" data-type="date" data-validatormode="offline" tabindex="0" style="width: 100%; max-width: 500px; min-width: 250px;">
                <div class="icons8-regular calendar"></div>
                <input type="" name="tanggal" id="" aria-label="Password Field">
                <span style="background-color: var(--second-color);" data-msginput=" / Cannot be empty!">Tanggal</span>
                <span class="show-pass"></span>
            </div>
        </div>
        <div class="box">
            <p class="font-size-14 font-weg-600">Jelaskan keterangan dari laporan anda.</p>
            <div class="textarea-field default icon" style="width: 100%; max-width: 500px; min-width: 250px;" tabindex="0">
                <div class="icons8-regular ball-point-pen"></div>
                <textarea name="keterangan" id=""></textarea>
                <span style="background-color: var(--second-color);" data-msginput=" / Cannot be empty!">Keterangan</span>
            </div>
        </div>
        <div class="box">
            <script>
                const laporanFile2 = document.getElementById("laporanfile");
                const parentfile = laporanFile2.previousElementSibling;
                laporanFile2.addEventListener("change", (e) => {
                    parentfile.dataset.btnlabel = laporanFile2.value + " added";
                    console.log("asd")
                })
            </script>
            <p class="font-size-14 font-weg-600">Upload file laporan</p>
            <label class="btn-filled second" for="laporanfile" data-btnLabel="Upload File" style="width: fit-content;">
                <div class="icons8-filled fullimage"></div>
            </label>
            <input type="file" name="laporanfile" id="laporanfile" style="display: none;">
        </div>
        <button type="submit" class="btn-filled default-gradient mrgn-t-30" data-btnLabel="Kirim Laporan"></button>
    </form>
    <div class="footer-content">
        <a href="/masyarakat/help" class="hyperlink">
            <div class="icons8-filled inquiry"></div>Butuh bantuan?
        </a>
    </div>
</div>
