<% 
    let avatar2 = rincian.fotoPelapor;
    if(avatar2 == "empty"){
        avatar2 = "blank_user.png";
    }     
%>
<% 
    let avatar3 = tanggapanData.fotoPetugas;
    if(avatar3 == "empty"){
        avatar3 = "blank_user.png";
    }     
%>

<div class="header-page">
    <h1>Rincian Laporan</h1>
</div>
<div class="content-page pad-10 mrgn-y-10">
    <div class="box dsp-grid gap-20" style="grid-template-columns: 1.3fr 1fr; height: 100%;">
        <div class="box z-1">
            <div class="box dsp-flex align-itms-center gap-10 mrgn-y-10 mrgn-b-30">
                <div class="box dsp-flex gap-6 align-itms-center">
                    <div class="tag success icon-only">
                        <div class="icons8-filled done"></div>
                    </div>
                    <p class="font-size-14 mrgn-clear">Laporan Selesai</p>
                </div>
                <div class="box dsp-flex gap-6 align-itms-center">
                    <div class="icons8-filled approval" style="filter: brightness(1); z-index: 1; --ratio: 28px;"></div>Ter-Verifikasi
                </div>
            </div>
            <div class="box">
                <h3 class="font-size-18 font-weg-700">Laporan :</h3>
                <div class="box dsp-flex align-itms-center gap-20">
                    <img src="img/avatars/<%= avatar2 %>" alt="" class="circle-view">
                    <div class="box dsp-flex fl-colm gap-6">
                        <p class="font-size-16 nowrap font-weg-700 mrgn-clear"><%= rincian.namaPelapor %></p>
                        <p class="font-size-12 nowrap font-weg-700 font-consolas space-06 disabled-text-1 mrgn-clear"><%= rincian.nikMelaporkan %></p>
                    </div>
                </div>
            </div>
            <span class="mrgn-y-30 dsp-block mrgn-x-10" style="border-bottom: 1px solid var(--third-color);"></span>
            <div class="box">
                <h3 class="font-size-18 font-weg-700">Judul :</h3>
                <p class="font-size-16 line-heg-26 font-weg-500"><%= rincian.judul %></p>
            </div>
            <span class="mrgn-y-30 dsp-block mrgn-x-10" style="border-bottom: 1px solid var(--third-color);"></span>
            <div class="box">
                <h3 class="font-size-18 font-weg-700">Keterangan :</h3>
                <p class="font-size-16 line-heg-26 font-weg-500" style="white-space: break-spaces;"><%= rincian.keterangan %></p>
            </div>
            <span class="mrgn-y-30 dsp-block mrgn-x-10" style="border-bottom: 1px solid var(--third-color);"></span>
            <div class="box">
                <p class="font-size-16 font-weg-700">Waktu & Tanggal Laporan dibuat</p>
                <div class="box dsp-flex gap-20">
                    <div class="box dsp-flex align-itms-center">
                        <div class="icons8-regular clock"></div><span class="font-size-13 font-weg-500 disabled-text-1" style="margin-left: 4px;"><%= rincian.waktuPengaduan %></span>
                    </div>
                    <div class="box dsp-flex align-itms-center">
                        <div class="icons8-regular calendar"></div><span class="font-size-13 font-weg-500 disabled-text-1" style="margin-left: 4px;"><%= rincian.tanggalPengaduan %></span>
                    </div>
                </div>
            </div>
            <span class="mrgn-y-30 dsp-block mrgn-x-10" style="border-bottom: 1px solid var(--third-color);"></span>
            <div class="box">
                <p class="font-size-16 font-weg-700">Tanggapan</p>
                <div class="box pad-20 rounded20 gap-10" style="background-color: var(--third-color);">
                    <p class="font-size-14 line-heg-26 font-weg-500 mrgn-clear mrgn-b-10" style="white-space: break-spaces;"><%= tanggapanData.tanggapan %></p>
                    <div class="box dsp-flex fl-colm">
                        <p class="font-size-13 font-weg-600 disabled-text-1">Penanggap :</p>
                        <div class="box dsp-flex align-itms-center gap-6 mrgn-b-10">
                            <img src="img/avatars/<%= avatar3 %>" alt="" class="circle-view" style="width: 30px;">
                            <p class="font-size-14 mrgn-clear font-weg-500"><%= tanggapanData.namaPetugas %></p>
                        </div>
                        <p class="font-size-12 font-weg-500 disabled-text-1 mrgn-clear"><%= tanggapanData.waktu %>, <%= tanggapanData.tanggal %></p>
                    </div>
                </div>
            </div>
            <button class="btn-filled second mrgn-t-30" onclick="openPage({
                path: '/petugas/laporanditanggapi',
                containerID: 'content',
                animType: 'fadeout',
            }); setNavIndex4Point()" data-btnlabel="Kembali">
                <div class="icons8-filled back" style="--ratio: 14px"></div>
            </button>
        </div>
        <div class="box">
            <div class="viewer-box">
                <div class="main-view no-view">

                </div>
                <div class="box dsp-flex align-itms-center mrgn-10">
                    <div class="icons8-regular document"></div>
                    <p class="font-size-13 font-weg-400 disabled-text-1 mrgn-clear" style="margin-left: 4px;">Terdapat 1 file</p>
                </div>
                <%
                    let classFileLaporan = ` empty-views`;
                    if(rincian.fileUpload){
                        classFileLaporan = "";
                    }
                %>
                <div class="gallery-view<%= classFileLaporan %>">
                    <%
                        const asd2 = rincian.fileUpload.split(".");
                        const fileLapor = asd2[asd2.length - 1].toLowerCase();
                    %>
                    <% if ((fileLapor == "png") || (fileLapor == "jpg") || (fileLapor == "jpeg")) { %>
                        <div class="list" data-filetype="image" data-filesrc="filelaporan/picture/<%= rincian.fileUpload %>">
                            <img src="filelaporan/picture/<%= rincian.fileUpload %>" alt="htr">
                            <div class="parent-dropdown bottom-left">
                                <div class="icon icons8-filled menuvertical cursr-pointer" tabindex="0" data-dpkey="previewlist1,btn-primary" style="filter: brightness(99);"></div>
                                <div class="dropdown-box pad-10" data-dpkey="previewlist1,dropdown"
                                data-dpanim="slide-bottom-on,slide-bottom-off">
                                    <ul class="list-box">
                                        <a class="li disappear" href="filelaporan/picture/<%= rincian.fileUpload %>" download>
                                            <div class="icons8-filled downloadingupdates mrgn-r-6"></div>Unduh
                                        </a>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    <% } else if ((fileLapor == "mp4") || (fileLapor == "mkv")) { %>
                        <div class="list" data-filetype="video" data-filesrc="filelaporan/video/<%= rincian.fileUpload %>">
                            <div class="parent-dropdown bottom-left">
                                <div class="icon icons8-filled menuvertical cursr-pointer" tabindex="0" data-dpkey="previewlist6,btn-primary" style="filter: brightness(99);"></div>
                                <div class="dropdown-box pad-10" data-dpkey="previewlist6,dropdown"
                                data-dpanim="slide-bottom-on,slide-bottom-off">
                                    <ul class="list-box">
                                        <a class="li disappear" href="filelaporan/video/<%= rincian.fileUpload %>" download>
                                            <div class="icons8-filled downloadingupdates mrgn-r-6"></div>Unduh
                                        </a>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
    <div class="footer-content">
        <a href="/masyarakat/help" class="hyperlink">
            <div class="icons8-filled inquiry"></div>Butuh bantuan?
        </a>
    </div>
</div>